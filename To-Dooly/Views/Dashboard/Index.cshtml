@model ToDooly.Models.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<h1>Dashboard</h1>

<div class="d-flex gap-3 mb-4">
    <div class="card text-white bg-primary flex-fill">
        <div class="card-body">
            <h5 class="card-title">Total Projects</h5>
            <p class="card-text fs-2">@Model.TotalProjects</p>
        </div>
    </div>
    <div class="card text-white bg-secondary flex-fill">
        <div class="card-body">
            <h5 class="card-title">Total Tasks</h5>
            <p class="card-text fs-2">@Model.TotalTasks</p>
        </div>
    </div>
    <div class="card text-white bg-success flex-fill">
        <div class="card-body">
            <h5 class="card-title">Completed Tasks</h5>
            <p class="card-text fs-2">@Model.CompletedTasks</p>
        </div>
    </div>
</div>

<canvas id="completedChart" height="100"></canvas>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const labels = ['Day 1','Day 2','Day 3'];
        const data   = [1, 3, 2];

        new Chart(
            document.getElementById('completedChart'),
            {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Tasks Completed',
                        data: data,
                        backgroundColor: 'rgba(75,192,192,0.4)'
                    }]
                },
                options: {
                    scales: {
                        y: { beginAtZero: true }
                    }
                }
            }
        );
    </script>
}
