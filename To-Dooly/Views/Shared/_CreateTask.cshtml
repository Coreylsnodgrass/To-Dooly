@model ToDooly.Models.Entities.TaskItem

<form id="create-task-form" asp-controller="TaskItems" asp-action="Create" method="post">
    <input type="hidden" asp-for="ProjectId" />

    <div class="mb-2">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="DueDate" class="form-label"></label>
        <input asp-for="DueDate" type="date" class="form-control" />
        <span asp-validation-for="DueDate" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="Priority" class="form-label"></label>
        <input asp-for="Priority" type="number" min="1" max="5" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <span id="create-task-error" class="text-danger ms-2"></span>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
